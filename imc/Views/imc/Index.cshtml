@model imc.Models.imcModels

@{
    ViewData["Title"] = "Calculadora de IMC";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-vjqqde5I60ecLRhFg0EZ9T0fFJX4csnQOBvU4G5Do6IZ3rfEFj8a48IWlgdeHiLy" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Calculadora de IMC</h2>

        @using (Html.BeginForm("CalcularIMC", "imc", FormMethod.Post, new { @class = "mt-4" }))
        {
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Nombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingresa tu nombre" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="Apellido" class="form-label">Apellido</label>
                    @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", placeholder = "Ingresa tu apellido" })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Peso" class="form-label">Peso (kg)</label>
                    @Html.TextBoxFor(model => model.Peso, new { @class = "form-control", placeholder = "Ingresa tu peso en kg" })
                    @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="Altura" class="form-label">Altura (m)</label>
                    @Html.TextBoxFor(model => model.Altura, new { @class = "form-control", placeholder = "Ingresa tu altura en metros (Ej: 1.80)" })
                    @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">Calcular IMC</button>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap Bundle JS (Incluye Popper.js automáticamente) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-enp5q/Xl7+kA2lwDovlvO1btCRDDgHbM61Wg5d3w5WqUqEXSfj2bDO7VJl+QKnZ0" crossorigin="anonymous"></script>
</body>
</html>
