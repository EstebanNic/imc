@model imc.Models.imcModels

@{
    ViewData["Title"] = "Resultado del IMC";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-vjqqde5I60ecLRhFg0EZ9T0fFJX4csnQOBvU4G5Do6IZ3rfEFj8a48IWlgdeHiLy" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Resultado de tu IMC</h2>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Datos ingresados</h4>
                <p><strong>Nombre:</strong> @Model.Nombre</p>
                <p><strong>Apellido:</strong> @Model.Apellido</p>
                <p><strong>Peso:</strong> @Model.Peso kg</p>
                <p><strong>Altura:</strong> @Model.Altura m</p>

                <h4 class="card-title mt-3">Cálculo del IMC</h4>
                <p><strong>IMC:</strong> @Model.IMC.ToString("F2")</p>
                <p><strong>Categoría:</strong> @Model.CategoriaIMC</p>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "imc")" class="btn btn-secondary">Volver a calcular</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle JS (Incluye Popper.js automáticamente) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-enp5q/Xl7+kA2lwDovlvO1btCRDDgHbM61Wg5d3w5WqUqEXSfj2bDO7VJl+QKnZ0" crossorigin="anonymous"></script>
</body>
</html>
